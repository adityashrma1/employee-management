<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>HibernateWithServlet</display-name>
  <welcome-file-list>
   
    <welcome-file>index.jsp</welcome-file>
   
  </welcome-file-list>
  
  <servlet>
  <servlet-name>AddController</servlet-name>
  <servlet-class>com.hibernate.crud.controller.AddController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>AddController</servlet-name>
  <url-pattern>/addController</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>FindAllController</servlet-name>
  <servlet-class>com.hibernate.crud.controller.FindAllController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>FindAllController</servlet-name>
  <url-pattern>/findAllController</url-pattern>
  </servlet-mapping>
  <servlet>
  
  <servlet-name>DeleteController</servlet-name>
  <servlet-class>com.hibernate.crud.controller.DeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>DeleteController</servlet-name>
  <url-pattern>/deleteController</url-pattern>
  </servlet-mapping>
  <servlet>
  <servlet-name>UpdateController</servlet-name>
  <servlet-class>com.hibernate.crud.controller.UpdateController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>UpdateController</servlet-name>
  <url-pattern>/updateController</url-pattern>
  </servlet-mapping>
  
 
  
</web-app>